.preview {
  width: 100%;
  height: 100vh;
  position: relative;
}
.preview .pingfen {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 530rpx;
  height: 340rpx;
  border-radius: 30rpx;
  background-color: white;
}
.preview .pingfen .pfTatle {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  color: #9C9898;
}
.preview .pingfen .xing {
  display: flex;
  justify-content: center;
  align-items: center;
}
.preview .pingfen .xing .xfen {
  margin-left: 20rpx;
  color: #FFCB41;
  font-weight: 500;
  font-size: 35rpx;
}
.preview .pingfen .anniu {
  width: 190rpx;
  height: 70rpx;
  font-size: 30rpx;
  margin-top: 40rpx;
}
.preview .infoData {
  border-radius: 20rpx 20rpx 0 0;
  overflow: hidden;
  width: 100%;
  background-color: white;
  padding: 30rpx;
}
.preview .infoData .info {
  display: flex;
  justify-content: space-between;
}
.preview .infoData .info .title {
  color: #9C9898;
}
.preview .infoData scroll-view {
  max-height: 50vh;
}
.preview .infoData scroll-view .row {
  display: flex;
  padding: 20rpx;
}
.preview .infoData scroll-view .row .til {
  color: #9C9898;
  width: 170rpx;
  text-align: right;
}
.preview .infoData scroll-view .row .sco {
  display: flex;
  align-items: center;
}
.preview .infoData scroll-view .row .sco .scoMsg {
  margin-left: 20rpx;
}
.preview .infoData scroll-view .msg {
  margin: 20rpx 0;
  background-color: #F6F6F6;
  color: #9C9898;
}
.preview .mask > view {
  margin: auto;
  width: -webkit-fit-content;
  width: fit-content;
  position: absolute;
  left: 0;
  right: 0;
}
.preview .mask .gobak {
  top: 20rpx;
  margin-left: 10rpx;
  width: -webkit-fit-content;
  width: fit-content;
  position: absolute;
  left: 0;
  right: 0;
  font-size: 100rpx;
}
.preview .mask .xiegan {
  padding: 8rpx 20rpx;
  top: 10vh;
  color: white;
  background-color: rgba(0, 0, 0, 0.3);
