  width: 750rpx;
  height: 343rpx;
  padding: 0 30rpx;
}
.homeLayout .banner swiper swiper-item image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.homeLayout .bannerZONG {
  background-color: #f9f9f9;
  height: 80rpx;
  width: 690rpx;
  margin: 0 auto;
  border-radius: 30rpx;
  display: flex;
  padding: 18rpx 31rpx;
}
.homeLayout .bannerZONG .gonggao {
  display: flex;
  align-items: center;
  width: 150rpx;
  color: #22B48B;
}
.homeLayout .bannerZONG .gonggao text {
  font-weight: 600;
  font-size: 80%;
}
.homeLayout .bannerZONG .lunbo {
  flex: 1;
  margin: 0 20rpx;
}
.homeLayout .bannerZONG .lunbo swiper {
  height: 100%;
}
.homeLayout .bannerZONG .lunbo swiper-item {
  color: #666;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.homeLayout .bannerZONG .jiantou {
  display: flex;
  align-items: center;
  justify-content: center;
}
.homeLayout .select .rightData {
  display: flex;
  align-items: center;
}
.homeLayout .select .rightData .datemsg {
  display: inline-block;
  margin-left: 10rpx;
  color: #22B48B;
}
.homeLayout .select .content {
  width: 720rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
}
.homeLayout .select .content scroll-view {
  white-space: nowrap;
}
.homeLayout .select .content scroll-view .img {
  width: 200rpx;
  height: 440rpx;
  display: inline-block;
  margin-right: 20rpx;
}
.homeLayout .select .content scroll-view .img image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.homeLayout .select .content scroll-view .img:last-child {
  margin-right: 30rpx;
}
